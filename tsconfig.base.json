{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@death-tower/core/interfaces": ["libs/core/interfaces/src/index.ts"],
      "@death-tower/core/util-map": ["libs/core/util-map/src/index.ts"],
      "@death-tower/stage/data-access": ["libs/stage/data-access/src/index.ts"],
      "@death-tower/stage/domain": ["libs/stage/domain/src/index.ts"],
      "@death-tower/stage/tower": ["libs/stage/tower/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
